{
  "name": "@secret-santa/monorepo",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.1.17",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:web\" \"bun run dev:api\"",
    "dev:web": "bun run --cwd apps/web dev",
    "dev:api": "bun run --cwd apps/api dev",
    "build:web": "bun run --cwd apps/web build",
    "start:web": "bun run --cwd apps/web start",
    "check:types": "tsc --pretty --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "typescript": "^5.5.4"
  }
}
