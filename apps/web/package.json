{
  "name": "@secret-santa/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.html",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.ts"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@secret-santa/ui": "workspace:*",
    "@secret-santa/prelude": "workspace:*",
    "@secret-santa/api": "workspace:*",
    "react": "^19",
    "react-dom": "^19",
    "react-router": "^7.10.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "elysia": "^1.4.18"
  }
}
